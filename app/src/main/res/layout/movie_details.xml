<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEBE9">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="145dp"
        android:id="@+id/movie_poster"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_alignTop="@+id/movie_poster"
        android:layout_toRightOf="@+id/movie_poster"
        android:layout_toEndOf="@+id/movie_poster"
        >

        <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            style="@style/movie_details_header"
            />

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/movie_details_values"
            />


        <TextView
            android:text="Release date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/movie_details_header"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_release_date"
            style="@style/movie_details_values"
            />


        <TextView
            android:text="Vote avarage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/movie_details_header"
            />
        <TextView
            android:id="@+id/movie_vote_avarage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/movie_details_values"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/movie_poster"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">


        <TextView
            android:id="@+id/details_header"
            android:text="Plot synopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/movie_details_header"
            android:layout_gravity="bottom|left" />


        <ScrollView
            android:layout_below="@id/details_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/movie_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxEms="60" />
        </ScrollView>

    </LinearLayout>



