<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <TextView
        android:id="@+id/item_movie_video_title"
        tools:text="Title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="@dimen/movie_video_item_margin_8dp"
        android:layout_marginRight="@dimen/movie_video_item_margin_8dp"
        android:textSize="@dimen/movie_video_item_title_text_size"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/item_movie_video_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:layout_marginLeft="@dimen/movie_video_item_margin_8dp"
        android:layout_marginRight="@dimen/movie_video_item_margin_8dp"
        android:scaleType="centerCrop"
        />

</LinearLayout>